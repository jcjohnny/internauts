        <% if logged_in? %>
            <div id="logout">
              <%= button_to 'Logout', logout_path, :method => :delete %>
            </div>
            <% else %>
            <div id="logout">
                <%= button_to 'Login', '/login', method: :get  %>
            </div>
        <% end %>
    </ul>
    </div>
</nav>



    <p class="flash"><%= flash.notice %></p>



<%= yield %>

</body>
</html>
