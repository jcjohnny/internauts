  <%= csrf_meta_tags %>
</head>
<body>
<nav>

    <div class="nav-container">
    <ul id="sports-navigator">
        <li class ="nauts"><a href="/"><img src="../assets/internaut_logo" alt=""></a><h1>INTERNAUTS</h1></li>
